@model BookMyShow.Models.Order

@{
    ViewBag.Title = "DisplayTicket";
}
<style type="text/css">
    tr {
        font-size: large;
        border-bottom: 1px solid #e7364d;
        border-right: 1px solid #e7364d;
        border-left: 1px solid #e7364d;
    }
</style>
<div class="col-md-2">
    <h4>Ticket Details</h4>
</div>
<br />
<br />
<br />

<table class="col-md-4 col-md-offset-3" style="border-top:1px solid #e7364d;">
    <tr class="col-md-12">
        <td class="col-md-4 col-md-offset-8">
            @Session["MovieName"]
        </td>
    </tr>
    <tr class="col-md-12">
        <td class="col-md-4 col-md-offset-4">
            Show Date
        </td>
        <td class="col-md-4 col-md-offset-4">
            @Session["ShowDate"]
        </td>
    </tr>
    <tr class="col-md-12">
        <td class="col-md-4 col-md-offset-4">Show Time</td>
        <td class="col-md-4 col-md-offset-4">
            @Session["ShowTime"]
        </td>
    </tr>
    <tr class="col-md-12">
        <td class="col-md-4 col-md-offset-4">
            Seat Number
        </td>
        <td class="col-md-4 col-md-offset-4">
            @Session["SeatNumber"]
        </td>
    </tr>
    <tr class="col-md-12">
        <td class="col-md-4 col-md-offset-4">
            Total Amount
        </td>
        <td class="col-md-4 col-md-offset-4">
            @Session["TotalAmount"]
        </td>
    </tr>
</table>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<p>
    @Html.ActionLink("Continue Booking", "Index")
</p>