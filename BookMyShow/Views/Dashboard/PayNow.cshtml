
@{
    ViewBag.Title = "Pay Now";
}

<h4>Pay Now</h4>
<style>    
    tr {
        font-size:large;
    }
    .moviename {
        font-size:x-large;        
    }
    td {
        text-align:center;
    }
    #pay {
  font-family:Calibri;
  border-collapse: collapse;
  width: 100%;
}

#pay td, #pay th {
  border: 1px solid #ddd;
  padding: 8px;
  height:50px; 
}

#pay tr:nth-child(even){background-color: #f2f2f2;}

#pay th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #4CAF50;
  color: white;
}
</style>

<table class="table" id="pay" style="width:2500px;border:1px solid #e7364d;margin-top:20px;">
    <tr>
        <td class="moviename">
            @Session["MovieName"]
        </td>
    </tr>
    <tr>
        <td>
            Show Date Time: @Session["ShowDate"] @Session["ShowTime"]
        </td>
    </tr>
    <tr>
        <td>
           Seat Number: @Session["SeatNumber"]
        </td>
    </tr>
    <tr>
        <td>
            Total Amount: @Session["TotalAmount"]
        </td>
    </tr>
    <tr>
        <td>
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                <input type="hidden" name="cmd" value="_s-xclick">
                <input type="hidden" name="hosted_button_id" value="T3775GG7SCSNC">
                <input type="image" src="https://www.paypalobjects.com/en_GB/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal – The safer, easier way to pay online!">
                <img alt="" border="0" src="https://www.paypalobjects.com/en_GB/i/scr/pixel.gif" width="1" height="1">
                <input type="hidden" name="amount" value="@Session["TotalAmount"]">
            </form>
        </td>
    </tr>    
</table>